{% extends "base.html.twig" %}

{% block title %}AppBundle:Sales:submitTicket{% endblock %}

{% block body %}
    <form method="post" action="{{ path('submit_ticket') }}">
        <div class="form-group">
            <label>Event name</label>
            <input type="text" class="form-control" placeholder="Event name" name="event_name">
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="datetime-local" class="form-control" placeholder="Event date" name="event_date">
        </div>
        <div class="form-group">
            <label>Event description</label>
            <textarea class="form-control" placeholder="Event description" name="event_description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
